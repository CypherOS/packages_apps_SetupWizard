<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:gravity="right"
    android:orientation="vertical"
    android:background="@android:color/white">

    <include layout="@layout/suw_glif_header" />

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="@dimen/suw_glif_margin_sides"
                    android:paddingRight="@dimen/suw_glif_margin_sides">

        <org.aoscp.setupwizard.widget.LocalePicker
            android:id="@+id/locale_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
	
	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@id/locale_list"
		android:gravity="right">
	
	    <Button
            android:id="@+id/setup_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_marginBottom="150dp"
			android:layout_marginRight="25dp"
            android:text="@string/next"
            style="@android:style/Widget.Material.Button.Colored" />
			
	</LinearLayout>

    <fragment android:name="org.aoscp.setupwizard.SetupWizardNavBar"
              android:id="@+id/navigation_bar"
              style="@style/setup_wizard_navbar_style" />

</LinearLayout>
